@model List<NapiService.Model.Bookeffect>
@{
    Layout = null;
}
@{
    <ul class="xihuan">
        @if (Model.Count >= 3)
        {
            for (int i = 0; i < 3; i++)
            {
            <li>
                <a href="/Info_OLD?bookid=@(Model[i].Id)">
                    <div class="picbox bookpic">
                        <img src="http://images.xxsy.net/bimg/@(Model[i].Id).jpg" />
                        @if (Model[i].Status == "已完成")
                        {
                            <div class="poplabel end"></div>
                        }
                    </div>
                </a>
                <h2>@(Model[i].Title)</h2>
                <p class="author">@(Model[i].AuthorName)</p>
            </li>
            }
        }
    </ul>
}
